@model BlogWebApp.Models.Article

<h2>Edit Article</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ArticleId" />
    <input type="hidden" asp-for="ContributorUsername" />

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Body</label>
        <textarea asp-for="Body" class="form-control" rows="5" required></textarea>
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-warning mt-3">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
